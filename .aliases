# Shell
# Here and elsewhere in this file, we swap out the BSD cmd for the GNU version using the coreutils pkg.
# We do so here to gain access to the "group dirs first" option.
alias ll='gls -lF --group-directories-first --color'
alias lla='ll -a'
alias lld='ll -d'
alias llh='ll -h'
alias lll='ll -L'
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias cats='ghead -n -0'  # Use GNU for sensible option args
alias shh='echo "No, YOU be quiet!" #'
alias ...='../..'
alias ....='../../..'
alias .....='../../../..'
alias vim='nvim'

# Edit common files
alias valias='vim ~/.config/aliases'
alias vzsh='vim ~/.zshrc'
alias vssh='vim ~/.ssh/config'
alias vaws-conf='vim ~/.aws/config'
alias vaws-creds='vim ~/.aws/credentials'

# Navigate to common dirs
alias downloads='~/Downloads'
alias dotfiles='~/Code/dotfiles'
alias ssh-dir='~/.ssh'
alias aws-dir='~/.aws'

# Listing & Grepping
alias gi='grep -i'
alias agi='alias | gi'
alias egi='env | gi'
alias psefgi='ps -ef | gi'

# Python virtualenv
alias pmvv='python3 -m venv .venv'
alias svba='source .venv/bin/activate'
alias pirr='pip install -r requirements.txt'
alias pfr='pip freeze >| requirements.txt'

# AWS CLI
alias asl='aws sso login'

# Git
alias ga='git add'
alias gaa='ga --all'
alias gap='ga --patch'
alias gb='git branch'
alias gba='gb --all'
alias gbd='gb --delete'
