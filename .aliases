# shell colors
alias ls='ls --color'
alias grep='grep --color'
alias fgrep='fgrep --color'
alias egrep='egrep --color'

# shell
alias ll='ls -alF --group-directories-first'
alias lld='ll -d'
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias shh='echo "No, YOU be quiet!" #'

# python virtualenv
alias pyve='source venv/bin/activate'

# git
alias ga='git add'
alias gap='ga -p'
alias gb='git branch'
alias gbd='gb -d'
alias gbdd='gb -D'
alias gbm='gb -m'
alias gch='git checkout'
alias gchb='gch -b'
alias gchd='gch develop'
alias gchm='gch master'
alias gco='git commit'
alias gcoa='gco --amend'
alias gcom='gco -m'
alias gcomm='gcom "mblakesley was here"'
alias gd='git diff'
alias gdc='gd --cached'
alias gdh='gdh1'
alias gdh1='gd HEAD~1'
alias gdh2='gd HEAD~2'
alias gdh3='gd HEAD~3'
alias glo='git log --oneline --graph'
alias gpl='git fetch -p; git pull'
alias gpld='gchd; gpl'
alias gplm='gchm; gpl'
alias gps='git push'
alias gpsf='gps -f'
alias gpsu='gps -u origin'
alias greb='git rebase'
alias grebi='greb -i'
alias grebd='grebi develop'
alias grebm='grebi master'
alias greba='greb --abort'
alias grebc='greb --continue'
alias grebh1='grebi HEAD~1'
alias grebh2='grebi HEAD~2'
alias grebh3='grebi HEAD~3'
alias grebh4='grebi HEAD~4'
alias grebh5='grebi HEAD~5'
alias grebh6='grebi HEAD~6'
alias grebh7='grebi HEAD~7'
alias grebh8='grebi HEAD~8'
alias grebh9='grebi HEAD~9'
alias gres='git reset'
alias gresha='gres --hard'
alias gresh='gres HEAD~1'
alias gs='gb; git status'
alias gsa='gb -a; git status'
alias gst='git stash'
alias gstl='gst list'
alias gstp='gst pop'

