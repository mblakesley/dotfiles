# Shell colors
alias ls='ls --color'
alias grep='grep --color'
alias fgrep='fgrep --color'
alias egrep='egrep --color'
alias diff='diff --color'

# Shell
alias ll='ls -lF --group-directories-first'
alias lla='ll -a'
alias lld='ll -d'
alias llh='ll -h'
alias lll='ll -L'
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias cats='head -n -0'
alias shh='echo "No, YOU be quiet!" #'
alias ...='../..'
alias ....='../../..'
alias vim='nvim'

# Edit common files
alias valias='vim ~/.aliases'
alias vzsh='vim ~/.zshrc'
alias vssh='vim ~/.ssh/config'
alias vaws='vim ~/.aws/config'

# Navigate to common dirs
alias downloads='~/Downloads'
alias dotfiles='~/code/dotfiles'
alias -g danki='~/Downloads/anki'

# Listing & grepping
alias gi='grep -i'
alias agi='alias | gi'
alias aligi='apt list -i | gi'
alias egi='env | gi'
alias psefgi='ps -ef | gi'

# Python virtualenv
alias pmvv='python3 -m venv .venv'
alias svba='source .venv/bin/activate'
alias pirr='pip install -r requirements.txt'
alias pfr='pip freeze >| requirements.txt'

# Git
alias ga='git add'
alias gaa='ga --all'
alias gap='ga --patch'
alias gb='git branch'
alias gba='gb --all'
alias gbd='gb --delete'
alias gbdd='gb -D'  # super delete
alias gbm='gb --move'
alias gcf='git config'
alias gcfgun='gcf --global user.name'
alias gcfgue='gcf --global user.email'
alias gcfl='gcf --list --show-scope'
alias gch='git checkout'
alias gcl='git clean'
alias gcli='gcl -i'
alias gcp='git cherry-pick'
alias gco='git commit'
alias gcoa='gco --amend'
alias gcom='gco -m'
alias gcomm='gcom "mblakesley was here"'
alias gcomma='gcomm --allow-empty'
alias gd='git diff'
alias gdc='gd --cached'
alias gdn='gd --name-status'
alias gdst='gd --stat'
alias gf='git fetch'
alias gl='git log'
alias glo='gl --oneline --graph'
alias gm='git merge'
alias gma='gm --abort'
alias gpl='git pull'
alias gps='git push'
alias gpsf='gps --force'
alias gpsu='gps --set-upstream origin HEAD'
alias greb='git rebase'
alias greba='greb --abort'
alias grebc='greb --continue'
alias grebi='greb --interactive'
alias grebim='grebi main'
alias grebimu='gswmu; gsw -; grebim'
alias grm='git rm'
alias grem='git remote'
alias gres='git reset'
alias gresha='gres --hard'
alias gs='gb; git status'
alias gsa='gba; git status'
alias gst='git stash'
alias gstc='gst clear'
alias gstl='gst list'
alias gstm='gst --message'
alias gstp='gst pop'
alias gsw='git switch'
alias gswc='gsw --create'
alias gswd='gsw --detach'
alias gswm='gsw main'
alias gswmu='gswm; gpl'
if [[ $0 != 'bash' ]]; then
	alias -g h1='HEAD~1'
	alias -g h2='HEAD~2'
	alias -g h3='HEAD~3'
	alias -g h4='HEAD~4'
	alias -g h5='HEAD~5'
	alias -g h6='HEAD~6'
	alias -g h7='HEAD~7'
	alias -g h8='HEAD~8'
	alias -g h9='HEAD~9'
fi

